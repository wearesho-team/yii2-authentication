{
  "name": "wearesho-team/yii2-authentication",
  "description": "Yii2 authentication integration",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Beton",
      "email": "aleksa.yagich@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.1",
    "horat1us/environment-config": "^1.3",
    "wearesho-team/token-generator": "^1.0.0",
    "wearesho-team/yii-http": "^1.14",
    "wearesho-team/yii2-authorization": "^1.0",
    "wearesho-team/yii2-tokens": "^1.0.0",
    "yiisoft/yii2": "^2.0.15.1"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^2.6",
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.4"
  },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint",
                "composer test"
            ],
            "post-merge": "composer update --lock"
        }
    },
  "autoload": {
    "psr-4": {
      "Wearesho\\Yii2\\Authentication\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Yii2\\Authentication\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
