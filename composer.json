{
  "name": "wearesho-team/yii2-authentication",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Beton",
      "email": "aleksa.yagich@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.1",
    "yiisoft/yii2": "2.0.15.1",
    "wearesho-team/yii-http": "^1.14",
    "wearesho-team/yii2-authorization": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "test": "./vendor/bin/phpunit",
    "cover": "./vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\Yii2\\Authentication\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Yii2\\Authentication\\Tests\\": "tests/"
    }
  }
}
